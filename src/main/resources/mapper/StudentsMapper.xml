<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kim.mybatis.mapper.StudentsMapper">

  <select id="findAll" resultType="com.kim.mybatis.domain.Student">
 	   SELECT * FROM student ORDER BY id DESC
  </select>
  
  <select id="findById" parameterType="long" resultType="com.kim.mybatis.domain.Student">
    	SELECT * FROM student WHERE id = #{id}
  </select>
 
  <insert id="insert" parameterType="com.kim.mybatis.domain.Student" 
  useGeneratedKeys="true" keyProperty="id">
	  	INSERT INTO student(NAME, email, age) 
	  	VALUES (#{name}, #{email}, #{age})
  </insert>
  
  <update id="update" parameterType="com.kim.mybatis.domain.Student">
	  	UPDATE student
		SET NAME = #{name}, email = #{email}, age = #{age}
		WHERE id = #{id}
  </update>
 
 <delete id="delete" parameterType="long">
        DELETE FROM student WHERE id = #{id}
 </delete>
 
</mapper>